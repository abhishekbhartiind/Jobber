{
    "name": "jobber-notification-service",
    "version": "1.0.0",
    "description": "",
    "main": "app.js",
    "scripts": {
        "start:dev": "set NODE_ENV=development&&nodemon -r tsconfig-paths/register src/app.ts | pino-pretty -c",
            "start:prod": "set NODE_ENV=production&&nodemon -r tsconfig-paths/register src/app.ts | pino-pretty -c",
        "start": "pm2 start ./build/src/app.js -i 5 --attach --watch | pino-pretty -c",
        "stop": "pm2 stop all",
        "delete": "pm2 delete all",
        "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && ts-node tools/copyAssets.ts",
        "test": "jest --coverage=true -w=1 --forceExit --detectOpenHandles --watchAll=false",
        "lint:check": "eslint ./src/**/*.ts",
        "lint:fix": "eslint ./src/**/*.ts --fix",
        "prettier:check": "prettier --check ./src/**/*.{ts,json}",
        "prettier:fix": "prettier --write ./src/**/*.{ts,json}"
    },
    "keywords": [],
    "author": "Akihira",
    "license": "ISC",
    "devDependencies": {
        "@jest/types": "^29.6.3",
        "@types/amqplib": "^0.10.4",
        "@types/email-templates": "^10.0.4",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/morgan": "^1.9.9",
        "@types/nodemailer": "^6.4.14",
        "@types/shelljs": "^0.8.15",
        "@typescript-eslint/eslint-plugin": "^6.18.1",
        "@typescript-eslint/parser": "^6.18.1",
        "eslint-config-prettier": "^9.1.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.8",
        "tsconfig-paths": "^4.2.0"
    },
    "dependencies": {
        "@ahgittix/jobber-shared": "^0.0.16",
        "@elastic/elasticsearch": "^8.11.0",
        "@sinclair/typebox": "^0.32.29",
        "amqplib": "^0.10.3",
        "dotenv": "^16.3.1",
        "ejs": "^3.1.9",
        "elastic-apm-node": "^4.4.1",
        "email-templates": "^11.1.1",
        "eslint": "^8.56.0",
        "eslint-plugin-import": "^2.29.1",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "http-status-codes": "^2.3.0",
